@import 'nib'

div.match
	position:absolute
	background-color: #111
	border-radius: 6px
	width:160px
	height 48px
	padding: 2px 26px 2px 2px
	display:table
	box-shadow: 2px 2px 10px rgba(0,0,19,.25)
	.team-label
		background-color: #eee
		color:#333
		width:100%
		padding-left: 6px
		height:20px
		display:block
		clear:both
		text-overflow: ellipsis
		white-space: nowrap

	.team-label:first-child
		border-radius: 3px 3px 0 0
		background-image:linear-gradient(top, #fff, #e6e6e6)
	.team-label:last-child
		border-radius: 0 0 3px 3px
		background-image:linear-gradient(top, #e6e6e6, #fff)