@import 'nib'

#games-area
	ul
		list-style: none
		padding:2px
		margin:0
	div.ready
		background: #777
		padding: 2px
		margin 1px 0
		color:#fff
	div.underway
		margin-bottom: 12px

	li.underway
		div.finished
			display:none
		div.underway
			display:block
		.btn.start-game
			display:none
	li.finished
		div.underway
			display:none
		div.finished
			display:block
		.btn.start-game
			display:none
	li.ready
		div.underway
			display:none
		div.finished
			display:none


